@model finalDeliverable.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="bookingID" />
            <div class="form-group">
                <label asp-for="busIdForeignkey" class="control-label"></label>
                <select asp-for="busIdForeignkey" class="form-control" asp-items="ViewBag.busIdForeignkey"></select>
                <span asp-validation-for="busIdForeignkey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userIdForeignkey" class="control-label"></label>
                <select asp-for="userIdForeignkey" class="form-control" asp-items="ViewBag.userIdForeignkey"></select>
                <span asp-validation-for="userIdForeignkey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="time" class="control-label"></label>
                <input asp-for="time" class="form-control" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
